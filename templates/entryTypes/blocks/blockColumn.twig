{# >>> Comp Defaults #}
{% set compDefaults = {
  data: {
    name: 'c-blockColumn',
    block: null,
  },
  classes: {
    root: '',
    custom: '',
  },
} %}

{# >>> Merge data / classes / variants (optional) #}
{% set props = {
  data: data is defined and data is iterable ? compDefaults.data | merge(data) : compDefaults.data,
  classes: classes is defined and classes is iterable ? compDefaults.classes | merge(classes) : compDefaults.classes,
} %}

{# TODO: Integrate Fluid Grid <3 #}

{% if props.data.block ??? null %}
  <section
    class="{{ props.data.name }} {{ props.classes.root }}  {{ props.classes.custom }}">
    {% for block in props.data.block.builderContentBlocks.eagerly() %}
      {{ include('entryTypes/_routerBlocks.twig', {
        block: block ??? null,
      }, withContext = false) }}
    {% endfor %}
  </section>
{% endif %}
