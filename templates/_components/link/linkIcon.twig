{#
  a-link
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'c-linkIcon',

  data: {},
  js: null,
  targetBlank: null,
  url: null,
  text: null,
  icon: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if props.text and props.url and props.icon %}
  <a
    href="{{ props.url }}" {{ props.url starts with '#' ? 'data-scroll' : '' }}  {{ module.settings(props) }} {{ props.targetBlank ? 'target="_blank"' }}>

    {# Icon #}
    {% include '_components/icon/icon.twig' with {
      props: {
        modifiers: ['24'],
        icon: props.icon,
      }
    } only %}

    {# Link Text #}
    <span class="{{ props.cn ~ '__text' }}">
      {{ props.text }}
    </span>
  </a>
{% endif %}
