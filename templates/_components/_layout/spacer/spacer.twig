{# Set Defaults #}
{% set defaults = {
  cn: 'c-spacer',
  data: {},
  customClasses: '',
  size: 2,
  visible: 0,
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

<hr class="border-0 h-{{ props.size }} {{ props.visible ? 'bg-blue-50' }} {{ props.customClasses }}" {{ module.settings(props) }}>

