{
  "require": {
    "craftcms/cms": "4.0.0-beta.1",
    "craftcms/redactor": "3.0.0-beta.1",
    "nystudio107/craft-minify": "4.0.0-beta.2",
    "nystudio107/craft-scripts": "^1.2.4",
    "nystudio107/craft-seomatic": "4.0.0-beta.3",
    "nystudio107/craft-vite": "4.0.0-beta.2",
    "putyourlightson/craft-blitz": "4.0.0-beta.1",
    "putyourlightson/craft-sherlock": "4.0.0-alpha.2",
    "putyourlightson/craft-sprig": "2.0.0-alpha.1",
    "spacecatninja/imager-x": "4.0.0-alpha.1",
    "verbb/formie": "2.0.0-beta.1",
    "verbb/navigation": "2.0.0-beta.1",
    "verbb/super-table": "3.0.0-beta.1",
    "vlucas/phpdotenv": "^5.4",
    "yiisoft/yii2-redis": "^2.0.6"
  },
  "require-dev": {
    "nystudio107/craft-autocomplete": "^1.0",
    "roave/security-advisories": "dev-latest",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\sitemodule\\": "modules/sitemodule/"
    }
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "scripts": {
    "craft-update": [
      "@pre-craft-update",
      "@post-craft-update"
    ],
    "create-folders": [
      "mkdir -p ./storage",
      "mkdir -p ./config/project",
      "mkdir -p ./web/cpresources",
      "mkdir -p ./web/assets"
    ],
    "pre-craft-update": [
      "@create-folders"
    ],
    "post-craft-update": [
      "@php craft install/check && php craft clear-caches/compiled-templates || exit 0",
      "@php craft install/check && php craft clear-caches/data || exit 0",
      "@php craft install/check && php craft clear-caches/temp-files || exit 0",
      "@php craft install/check && php craft migrate/all --no-content || exit 0",
      "@php craft install/check && php craft project-config/apply --force || exit 0",
      "@php craft install/check && php craft migrate --track=content || exit 0"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "pre-update-cmd": "@pre-craft-update",
    "pre-install-cmd": "@pre-craft-update",
    "post-update-cmd": "@post-craft-update",
    "post-install-cmd": "@post-craft-update"
  }
}
