{
  "name": "buildchain",
  "description": "A drop-in buildchain for using Vite in your Craft CMS plugins or modules",
  "author": {
    "email": "david@hellmann.io",
    "name": "David Hellmann",
    "url": "https://davidhellmann.com"
  },
  "dependencies": {
    "@alpinejs/persist": "^3.4.2",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@vueuse/core": "^6.7.3",
    "alpinejs": "^3.4.2",
    "axios": "^0.23.0",
    "bowser": "^2.11.0",
    "ferdi": "0.0.21",
    "focus-trap": "^6.7.1",
    "lazysizes": "^5.3.2",
    "lightgallery": "^2.2.1",
    "lodash-es": "^4.17.21",
    "swiper": "^7.0.9",
    "tailwindcss-fluid-type": "^1.3.0",
    "tailwindcss-question-mark": "^0.1.1",
    "typeface-jetbrains-mono": "^2.0.1",
    "typeface-lato": "^1.1.13",
    "typeface-merriweather": "^1.1.13",
    "vue": "^3.2.20",
    "vue-axios": "^3.3.7",
    "vue-confetti": "^2.0.8"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@vitejs/plugin-legacy": "^1.6.2",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/compiler-sfc": "^3.2.20",
    "autoprefixer": "^10.3.7",
    "npm-check": "^5.9.2",
    "postcss": "^8.3.10",
    "postcss-nesting": "^8.0.1",
    "rollup-plugin-critical": "^1.0.8",
    "tailwindcss": "^2.2.17",
    "tailwindcss-debug-screens": "^2.1.0",
    "vite": "^2.6.10",
    "vite-plugin-restart": "0.0.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run twc && vite build",
    "upgrade-interactive": "npm-check --update",
    "preinstall": "$npm_execpath --silent run checknpm",
    "checknpm": "echo \"$npm_execpath\" | grep -q \"npm-cli\\.js$\" || (echo '⚠️ Use npm not yarn! No Hipster Party here!! ⚠️ ' && echo && exit 1)",
    "twc": "npx tailwindcss build ./src/css/app.pcss -o ./src/public/css/tailwind.app.css -c tailwind.config.js"
  },
  "version": "1.1.3"
}
